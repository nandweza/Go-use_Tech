<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/admin-navbar.ejs') %>
        <div class="admin">
            <h3 class="dashboard mt-4 mb-2">Access & Update All Courses</h3>
            <hr class="border">
            <div class="admin-wrapper">
                <div class="course-wrapper">
                    <% courses.forEach ( function (course) { %>
                    <form class="form-bt" action="/delete" method="post">
                        <div class="icons-2">
                            <button class="btn btn-outline-danger">
                                <a href="/edit/<%= course._id %>" data-toggle="model"><i class="fa fa-edit" style="font-size: 30px; color: black;"></i></a>
                            </button>
                            <button name="deleteBtn" value="<%=course._id%>" type="submit" class="btn btn-outline-danger">
                                <i class="fa fa-trash" style="font-size: 30px; color: black;"></i>
                            </button>
                        </div>
                            <div class="title-text">
                                <%= course.title %>
                            </div>
                            <span>
                                <%= course.createdAt %>
                            </span>
                            <div class="img-div">
                                <video width="640" height="360" controls>
                                    <source src="<%= course.img %>" type="video/mp4">
                                </video>
                            </div>
                            <div class="desc">
                                <%= course.desc %>
                            </div>
                            <div class="icons">
                            </div>
                        </form>
                    <% }); %>
                    </div>
                </div>
            </div>
    </body>
</html>