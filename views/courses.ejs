<%- include('./partials/head.ejs') %>

    <body>
        <nav class="course-nav">
            <ul>
                <li>
                    <img class="logo" src="/images/go.png" alt="logo">
                </li>
                <li>
                    <input type="search" id="search" name="search" placeholder="Search for a course">
                </li>
                <li>
                    <a href="/logout">Logout</a>
                </li>
            </ul>
        </nav>
        <div class="main">
            <div class="courses">
                <% if (courses.length > 0) { %>
                    <% courses.forEach((course) => { %>
                        <div class="single-course">
                            <div class="img-div">
                                <video width="320" height="240" muted>
                                    <source src="<%= course.img %>" type="video/mp4">
                                </video>
                            </div>
                        <span class="date">
                            <%= course.createdAt %>
                        </span>
                        <br>
                        <br>
                        <div class="title">
                            <%= course.title %>
                        </div>
                        <div class="desc">
                            <p>
                              <%= course.desc.substring(0, 100) %>
                              <!-- <a href="/course/<%= course._id %>" style="color: red;">Read more.</a> -->
                            </p>
                        </div>
                    </div>
                    <% }) %>
                <% } else { %>
                <div style="margin: auto;">There are no courses to display...</div>
                <% } %>
            </div>
        </div>
    </body>