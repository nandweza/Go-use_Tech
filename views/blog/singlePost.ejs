<%- include('../partials/head.ejs') %>

<body>
  	<div class="intro">
    <%- include('../partials/nav.ejs') %>
        <div id="blog-carousel" class="carousel slide d-flex justify-content-center align-items-center" data-bs-ride="carousel" style="height: 75vh;">
          	<div class="carousel-inner">
            	<div class="carousel-item active">
              		<div class="text-center">
                		<h2 class="single-post-header fs-* text-center"><%= post.title %></h2>
						<span class="text-muted post-date">
							<%= post.createdAt.toDateString() %>
						</span>
              		</div>
            	</div>
            	<div class="carousel-item">
              		<div class="text-center px-5">
                		<p class="single-post-text fs-*">
                  			<%= post.content.substring(0, 120) + "..." %>
                  			<a 
								href="#post" 
								tyle="color: red;"
							>
								Read more.
							</a>
               			</p>
              		</div>
            	</div>
          	</div>
          	<button class="carousel-control-prev" type="button" data-bs-target="#blog-carousel" data-bs-slide="prev">
            	<span class="carousel-control-prev-icon" aria-hidden="true"></span>
            	<span class="visually-hidden">Previous</span>
          	</button>
          	<button class="carousel-control-next" type="button" data-bs-target="#blog-carousel" data-bs-slide="next">
            	<span class="carousel-control-next-icon" aria-hidden="true"></span>
            	<span class="visually-hidden">Next</span>
          	</button>
        </div>
    </div>
	<div id="post" class="">
    	<div class="pt-5">
			<div class="row">
				<div class="col-lg-12 col-md-12">
					<div class="post-img">
						<img 
							src="/uploads/<%= post.blogimg %>" 
							alt="Post Image" 
							class="img-responsive" 
							width="100%" 
							height="500"
						>
					</div>
					<h2 class="post-title fw-bold pt-5 pb-2">
						<%= post.title %>
					</h2>
					<div class="post-content">
						<%= post.content %>
					</div>
				</div>
				<div class="col-lg-12 col-md-12 pt-5">
					<hr class="border-bottom">
					<h3 class="py-2 fw-bold">More from Go UseTech</h3>
					<div class="row">
						<% if ( posts.length > 0 ) { %>
							<% posts.forEach((post) => { %>
								<div class="col-lg-4 col-md-4 col-sm-6 p-3">
									<div class="card">
										<div class="img-div">
											<img 
												src="/uploads/<%= post.blogimg %>" 
												alt="Post Image" 
												class="img-responsive" 
												width="100%" 
												height="150"
											>
										</div>
										<h4 class="title fw-bold p-2">
											<%= post.title.substring(0, 35) + "..." %>
										</h4>
										<div class="desc">
											<p class="p-2 more-content">
												<%= post.content.substring(0, 80) + "..." %>
												<a 
													href="/blog/<%= post._id %>" 
													style="color: red;"
												>
													Read more.
												</a>
											</p>
										</div>
									</div>
								</div>
							<% }) %>
						<% } else { %>
											
						<% } %>
					</div>
				</div>
			</div>
      	</div>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>