<%- include('../partials/head.ejs') %>

<body class="course-body">
    <%- include('../partials/course-navbar.ejs') %>
    <div class="container pb-4">
        <div class="row pt-4">
            <div class="col-lg-8 col-md-12 col-sm-12 course-section">
                <div>
                    <h2 class="pt-5 pb-2">
                        <%= course.title %>
                    </h2>
                    <p class="">
                        <%= course.description %>
                    </p>
                </div>
                <div class="pt-4">
                    <% course.lessons.forEach((lesson) => { %>
                        <div>
                            <li>
                                <a href="/api/course/<%= course._id %>/lessons/<%= lesson._id %>">
                                    <h4>
                                        <%= lesson.title %>
                                    </h4>
                                </a>
                            </li>
                            <hr>
                        </div>
                    <% }) %>
                </div>
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>

</body>
 