                        <a class="nav-link" href="/courses">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container pb-4">
        <div class="row pt-4">
            <div class="col-lg-8 col-sm-12">

                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/zpOULjyy-n8?rel=0" width="100%" height="400" allowfullscreen></iframe>
                </div>
                <h2 class="title-text fw-bold mt-5">
                    <%= course.title %>
                </h2>
                <div id="desc" class="desc mt-2 mb-3">
                    <%= course.desc %>
                </div>
                <hr>
                <h3 id="author" class="author mt-5 mb-3">
                    <%= course.author %>
                </h3>
                <div id="abtAuthor" class="abtAuthor mt-2 mb-3">
                    <%= course.abtAuthor %>
                </div>
