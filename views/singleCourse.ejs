            </div>
            <div class="col-lg-4 px-3">
                <div class="title-text">
                    <h3 class="mt-2 mb-2 fw-bold">Recent Courses</h3>
                    <div class="latest-courses">
                        <% if (courses.length > 0) { %>
                            <% courses.forEach((course) => { %>
                                <div class="single-course mb-2">
                                    <div class="card">
                                        <img src="<%= course.img %>" class="card-img-top" alt="..." width="100%" height="225">
                                        <div class="card-body course-content">
                                            <h4 class="card-title fw-bold">
                                                <%= course.title %>
                                            </h4>
                                            <p class="card-text">
                                                <%= course.desc.substring(0, 150) + "..." %>
                                            </p>
                                            <div class="row mt-3">
                                                <span class="date col mt-3">
                                                    <%= course.createdAt.toDateString() %>
                                                </span>
                                                <a href="/courses/<%= course._id %>" class="col btn btn-primary">View Course</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
