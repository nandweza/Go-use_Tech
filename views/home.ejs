  <%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>
      <div class="main">
        <div class="main-home">
          <h1 class="text">GO-USE TECH</h1>
          <P class="text">
            Welcome to our education and tech website, where we strive<br>
            to provide you with the latest and most informative content<br>
            about the intersection of technology and education.
          </P>
          <div class="home-btn">
            <button class="main-btn left">
              <a href="/about">ABOUT US</a>
            </button>
            <button class="main-btn right">
              <a href="/register">GET STARTED</a>
            </button>
          </div>
        </div>
      </div>

    <div class="statements container">
      <div class="row">
        <div class="col-lg-4 col-sm-12">
          <div class="d-flex justify-content-center align-items-center">
            <i class="fa fa-bullseye" style="font-size: 70px; color: rgb(233, 107, 34)"></i>
          </div>
          <h3 class="text-center mt-4">Our Mission</h3>
          <p class="text-center stext">
            Lorem ipsum, dolor sit amet consectetur adipisicing
            elit. Dolores nam deserunt quos optio sapiente lorem
          </p>
        </div>
        <div class="col-lg-4 col-sm-12">
          <div class="d-flex justify-content-center align-items-center">
            <i class="fa fa-key" style="font-size: 70px; color:rgb(233, 107, 34);"></i>
          </div>
          <h3 class="text-center mt-4">Our Core Values</h3>
          <p class="text-center stext">
            Excellence, Innovation, Leadership, Respect, Integrity, Diversity
          </p>
        </div>
        <div class="col-lg-4 col-sm-12">
          <div class="d-flex justify-content-center align-items-center">
            <i class="fa fa-eye" style="font-size: 70px; color: rgb(233, 107, 34)"></i>
          </div>
          <h3 class="text-center mt-4">Our Vision</h3>
          <p class="text-center mt-2 stext">
            To become regional leader in consultancy, innovative
            market research and advanced analytical solutions.
          </p>
        </div>
      </div>
    </div>

    <div class="featured-courses">
      <div class="container">  
        <h2 class="mb-5 pt-5 featured-title">Featured Courses</h2>
        <div class="row">
            <% courses.forEach((course) => { %>
              <div class="col-lg-4 col-md-6 mb-5">
                <div class="card bg-transparent border-0">
                  <img src="<%= course.img %>" class="card-img-top" alt="..." width="100%" height="225">
                  <div class="card-body course-content">
                    <h4 class="card-title fw-bold white-text ftitle">
                      <%= course.title %>
                    </h4>
                    <p class="card-text white-text ftext">
                      <%= course.desc.substring(0, 300) %>
                    </p>
                    <div class="row mt-3">
                      <a href="/register" class="btn btn-sm btn-dark fbtn">Get Started</a>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
        </div>
      </div>
    </div>

    <div class="featured-blog">
      <div class="container">
        <div class="row">
          <div class="col-lg-8">
            <div class="card p-5">
              <h3 class="mt-4 mb-4">Latest Posts</h3>
              <% posts.forEach((post) => { %>
                <div class="row mb-4 pb-4 border-bottom">
                  <div class="col">
                    <img src="<%= post.img %>" class="img-responsive fblog-img" width="300"/>
                  </div>
                  <div class="col">
                    <div class="fblog-title">
                      <%= post.title %>
                    </div>
                    <div class="fblog-desc">
                      <p>
                        <%= post.content.substring(0, 240) + "..." %>
                        <a href="/blog/<%= post._id %>" style="color: red;">Read more.</a>
                      </p>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
          <div class="col-lg-4 events">
            <div class="card p-3">
              <h3 class="mt-5">Upcoming Events</h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer.ejs') %>
  </body>

