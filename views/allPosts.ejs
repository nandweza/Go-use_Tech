<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/admin-navbar.ejs') %>
        <div class="admin">
            <h3 class="dashboard mt-4 mb-2">Access & Update All Posts</h3>
            <div class="admin-wrapper">
                <div class="course-wrapper">
                    <% posts.forEach((post) => { %>
                        <div class="flex-btn">
                            <div class="pb-3">
                                <form action="/delete" method="POST" class="">
                                    <button name="deleteBtn" value="<%= post._id %>" type="submit" class="btn btn-primary btn-lg p-2">Delete</button>
                                </form>
                            </div>
                            <div class="pb-3">
                                <a href="" class="">
                                    <button class="btn btn-primary btn-lg p-2">Update</button>
                                </a>
                            </div>
                        </div>
                        <div class="img-div">
                            <img src="<%= post.blogimg %>" alt="Post image" width="100%" height="500">
                        </div>
                        <span>
                            <%= post.createdAt %>
                        </span>
                        <div class="pb-5">
                            <h3 class="title-text fw-bold pt-5 pb-3">
                                <%= post.title %>
                            </h3>
                            <div class="desc pb-4 border-bottom">
                                <%= post.content %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </body>
</html>